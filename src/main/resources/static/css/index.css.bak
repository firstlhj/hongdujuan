body,.content div,.content p{
    padding: 0;
    margin: 0;
    background-color: rgb(229,42, 47);
}
img{
    width: 100%;
    display: block;
}
.box-1{
    background: url(../img/img2.gif) no-repeat;
    background-size: 100%;
    height: 28rem;
}
.box-2{
    /* display: flex; */
    text-align: center;
    width: 100%;
    border: 2px solid pink;
    color: #fdcea2;
    font-size: .6rem;
    font-weight: 700;
    padding: 10px 0;
    display: inline-block;
}
.box-6{
    position: fixed;
    bottom: 0;
    left: 0;
}

.box-3{
    display: inline-block;
    width: 46%;
}
.box-4{
    width: 50%;
    border-left: 2px solid pink;
    display: inline-block;
    /* display: none; */
}
.footer{
    text-align: center;
    font-size: .14rem;
    padding: .56rem 0;
}